<!doctype html>
<html class="no-js" lang="zxx">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Admin site</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="img/favicon.ico">

    <!-- Google Fonts -->
    <link href="css/googleapisFont.css" rel="stylesheet">

    <!-- CSS -->
    <!-- Bootstrap CSS -->
    <link rel='stylesheet' href='css/bootstrap.min.css'>
    <link rel='stylesheet' href='css/bootstrap-datetimepicker.css'>
    <!-- Icon Font CSS-->
    <link rel="stylesheet" href="css/material-design-iconic-font.min.css">
    <!-- Plugins Import CSS -->
    <link rel="stylesheet" href="css/import.css">
    <!-- Style CSS -->
    <link rel="stylesheet" href="style.css">
    <!-- Responsive CSS -->
    <link rel="stylesheet" href="css/responsive.css">
    <link href="css/color/color-1.css" rel="stylesheet">
    <link rel="stylesheet" href="css/addNews.css">
    <link rel="stylesheet" href="css/swiper.css">
    <link rel="stylesheet" href="css/swiper.min.css">
    <!-- Modernizer JS -->
    <script src="js/vendor/modernizr-2.8.3.min.js"></script>
</head>

<body>
    <!-- Pre Loader -->
    <div class="preloader">
        <div class="loading-center">
            <div class="loading-center-absolute">
                <div class="object object_one">
                </div>
                <div class="object object_two">
                </div>
                <div class="object object_three">
                </div>
            </div>
        </div>
    </div>
    <!-- Body main wrapper start -->
    <div class="wrapper bg-white fix">

        <!-- Header 4 -->
        <% include element/header %>
        <!-- Cart Area -->
        <div class="cart-area pb-90 pt-90 mt-100">
            <div class="container">
                <div class="row">
                    <div class="procced-checkout col-md-12 col-xs-12">
                        <button class="btn btn-open checkout-link">
                            <span>Thêm sản phẩm đấu giá</span></button>
                    </div>
                    <section class="modal">
                        <div class="wrapper">
                            <div class="container">
                                <span class="icon-close"></span>
                                <div class="right">
                                    <div class="form">
                                        <h2 class="title">Thêm sản phẩm đấu giá</h2>
                                        <form method="get" action="/createproduct">
                                            <div class="input-wrapper">
                                                <label for="">Nhập tên sản phẩm:</label>
                                                <input id="name" type="text" name="name" placeholder="Name">
                                            </div>
                                            <div class="input-wrapper">
                                                <label for="">Chọn loại sản phẩm:</label>
                                                <select name="cards">
                                                    <option value="">Điện tử</option>
                                                    <option value="">Đồ cổ</option>
                                                    <option value="">Xe</option>
                                                </select>
                                            </div>
                                            <div class="input-wrapper">
                                                <label for="">Nhập mô tả:</label>
                                                <input id="mota" type="text" name="des" placeholder="Mô tả">
                                            </div>
                                            <div class="input-wrapper">
                                                <label for="">Chọn hình ảnh:</label>
                                                <input id="image" type="file" placeholder="Image">
                                            </div>
                                            <div class="input-wrapper">
                                                <label for="">Nhập giá:</label>
                                                <input id="gia" type="text" name="price" placeholder="Giá">
                                            </div>
                                            <div class="input-wrapper">
                                                <label for="">Thời gian khởi động đấu giá:</label>
                                                <div class="form-group">
                                                    <div class="input-group date" id="datetimepicker1">
                                                        <input type="text" class="form-control" name="dateAuc" />
                                                        <span class="input-group-addon">
                                                            <span class="">Chọn ngày</span>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="input-wrapper">
                                                <label for="">Hạn cho mỗi lượt:</label>
                                                <input id="due" type="text" name="timerun" placeholder="Giây">
                                            </div>
                                            <button class="btn" type="submit"><span>Xác nhận</span></button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
                <div class="row" style="margin-top: 20px;">
                    <div class="col-xs-12">
                        <div class="cart-table table-responsive mb-50">
                            <table class="table text-center">
                                <thead>
                                    <tr>
                                        <th class="product">Sản phẩm</th>
                                        <th class="price">Giá</th>
                                        <th class="stock">TG bắt đầu</th>
                                        <th class="qty">Hạn</th>
                                        <th class="remove">Chỉnh sửa</th>
                                        <th class="remove">Xoá</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% function formatNumber(num) { return num.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,')  + " VNĐ"} %>
                                    <% _uG.forEach((item) => { %>
                                    <% var index = 0;%>
                                    <% item.product.forEach((product) => { %>
                                    <%let current_datetime = new Date(product.dateAuc);%>
                                    <%let formatted_date = current_datetime.getFullYear() + "-" + (current_datetime.getMonth() + 1) + "-" + current_datetime.getDate() + " " + current_datetime.getHours() + ":" + current_datetime.getMinutes();%>
                                    <tr>
                                        <td>
                                            <div class="cart-product text-left fix">
                                                <img src="img/product/2.jpg" alt="" />
                                                <div class="details fix">
                                                    <a href="#"> <%=product.productName%></a>
                                                    <p><%=product.productid%></p>
                                                    <p>Business : <%=item.businessName%></p>
                                                    <p>Loại : Đồ cổ</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="cart-price"><%=product.productPrice%></p>
                                        </td>
                                        <td>
                                            <p class="cart-stock"><%=formatted_date%></p>
                                        </td>
                                        <td>
                                            <p class="cart-stock"><%=product.timeRun%></p>
                                        </td>
                                        <td><a
                                                href="/deleteproduct?businessid=<%=item.businessID%>&businessname=<%=item.businessName%>&index=<%=index%>"><button
                                                    class="cart-pro-remove"><i class="zmdi zmdi-edit"></i></button></a>
                                        </td>
                                        <td><a
                                                href="/deleteproduct?businessid=<%=item.businessID%>&businessname=<%=item.businessName%>&index=<%=index%>"><button
                                                    class="cart-pro-remove"><i class="zmdi zmdi-close"></i></button></a>
                                        </td>
                                        </td>
                                    </tr>
                                    <% index++;%>
                                    <% }); %>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--Footer-->
        <% include element/footer %>
    </div>
    <!-- Body main wrapper end -->

    <!-- JS -->

    <!-- jQuery JS  -->
    <!-- partial -->
    <script src='js/jquery.min.js'></script>
    <script src='js/moment-with-locales.js'></script>
    <script src='js/bootstrap-datetimepicker.js'></script>
    <!-- Bootstrap JS  -->
    <script src="js/bootstrap.min.js"></script>
    <!-- Plugins JS  -->
    <script src="js/plugins.js"></script>
    <!-- Particles Active JS  -->
    <script src="js/app.js"></script>
    <!-- Main JS  -->
    <script src="js/main.js"></script>
    <script src="js/addNews.js"></script>
    <script src="js/swiper.js"></script>
    <script src="js/swiper.min.js"></script>
    <script>
        $(function () {
            $('#datetimepicker1').datetimepicker();
        });</script>
    <script>
        $(document).ready(function () {
            $(".menu_sanpham").addClass("active");
        });
    </script>
</body>

</html>