    <!-- Body main wrapper start -->
    <div class="wrapper bg-white fix">
        <!-- Header 4 --> <% include element/header %>
        <!-- Cart Area -->
        <div class="cart-area pb-90 pt-90 mt-100">
            <div class="container">
                <div class="row">
                    <div class="procced-checkout col-md-12 col-xs-12">
                        <button id="addProductBtn" class="btn btn-open checkout-link">
                            <span>Thêm sản phẩm đấu giá</span></button>
                    </div>
                    <section class="modal">
                        <div class="wrapper">
                            <div class="container">
                                <span class="icon-close"></span>
                                <div class="right">
                                    <div class="form">
                                        <h2 class="title">Thêm sản phẩm đấu giá</h2>
                                        <form method="POST" action="/createproduct" id="formADD">
                                            <input type='hidden' name='categoryID' id='categoryID_txt'>
                                            <div class="input-wrapper">
                                                <label for="">Tên sản phẩm</label>
                                                <input name="productName" id="productName_txt" type="text" placeholder="Name" onblur="checkproductName(this.value)">
                                            </div>
                                            <label id="error_productName" style="text-transform: inherit;font-style: italic;color: red;font-size: 13px;"></label>
                                            <div class="input-wrapper">
                                                <label for="">Chọn loại sản phẩm</label>
                                                <select name="categoryName" id="listCaterory"></select>
                                            </div>
                                            <div class="input-wrapper">
                                                <label for="">Mô tả</label>
                                                <input name="productDescribe" id="productDescribe_txt" type="text" placeholder="Name" onblur="checkproductDescribe(this.value)">
                                            </div>
