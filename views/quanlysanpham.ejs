                    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" style="z-index: 2000;">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <form action="/editProduct" style="margin: 20px;" id="formEdit">
                                        <input name="owner" id="businessNameEdit" type="hidden">
                                        <input name="id" id="businessIDEdit" type="hidden">
                                        <input name="productID" id="productIDEdit" type="hidden">
                                        <div class="input-wrapper">
                                            <label class="labelEdit">Tên:</label>
                                            <input name="productName" class="txtEdit" id="edit_bnPhone" type="text" onblur="checkproductName_edit(this.value)">
                                            <label id="error_productName_edit" style="text-transform: inherit;font-style: italic;color: red;font-size: 13px;font-weight: 400;"></label>
                                        </div>
                                        <div class="input-wrapper">
                                            <label class="labelEdit">Mô tả:</label>
                                            <input name="productDescribe" class="txtEdit" id="edit_bnEmail" type="text" onblur="checkproductDescribe_edit(this.value)"><br>
                                            <label id="error_productDescribe_edit" style="text-transform: inherit;font-style: italic;color: red;font-size: 13px;font-weight: 400;"></label>
                                        </div><br>
                                        <button onclick="checkEditProduct();" class="btn btn-warning" id="btnEdit" type="button" style="padding: 5px;">Xác nhận</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Modal -->
                    <div id="modalAddAuction" class="modal fade" role="dialog" style="z-index: 2000;">
                        <div class="modal-dialog">
                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    <h4 class="modal-title"><strong>THÊM PHIÊN ĐẤU GIÁ</strong></h4>
                                </div>
                                <div class="modal-body">
                                    <form action="" style="padding: 20px;">
                                        <div class="input-wrapper">
                                            <label class="labelEdit">Tên phiên đấu giá:</label>
                                            <input type="text" name="price" class="txtEdit">
                                        </div>
                                        <div class="input-wrapper">
                                            <label class="labelEdit">Thời gian khởi động đấu giá:</label>
                                            <div class="form-group">
                                                <div class="input-group date" id="datetimepicker1">
                                                    <input type="text" class="form-control" name="dateAuc" class="txtEdit" />
                                                    <span class="input-group-addon">
                                                        <span class="">Chọn ngày</span>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="input-wrapper">
                                            <label class="labelEdit">Nhập giá:</label>
                                            <input id="gia" type="text" name="price" class="txtEdit">
                                        </div>
                                        <div class="input-wrapper">
                                            <label class="labelEdit">Hạn cho mỗi lượt:</label>
                                            <input id="due" type="text" name="timerun" class="txtEdit">
                                        </div>
                                        <button class="btn btn-warning" id="btnEdit" type="button" style="padding: 5px; margin-top: 50px;">Xác nhận</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> <% var formatter = new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }); %> <div class="row" style="margin-top: 20px;">
                    <div class="col-xs-12">
                        <div class="cart-table table-responsive mb-50">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="id" style="padding-left: 10px;"> #</th>
                                        <th class="id">ID</th>
                                        <th class="price">Hình ảnh</th>
                                        <th class="stock">Tên</th>
                                        <th class="stock">Sở hữu</th>
                                        <th class="qty">Mô tả</th>
                                        <th class="remove" style="width: 50px;">Thêm PĐG</th>
                                        <th class="remove" style="width: 50px;">Sửa</th>
                                        <th class="remove" style="width: 50px;">Xoá</th>
                                    </tr>
                                </thead><% var i = 1%> <tbody> <% function formatNumber(num) { return num.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,')  + " VNĐ"} %> <% _uG.forEach((product) => { %> <%let current_datetime = new Date(product.auction.startDate);%> <%let formatted_date = current_datetime.getFullYear() + "-" + (current_datetime.getMonth() + 1) + "-" + current_datetime.getDate() + " " + current_datetime.getHours() + ":" + current_datetime.getMinutes();%> <tr>
                                        <td><strong><%= i %></strong></td>
                                        <td>
                                            <div class="cart-stock idTag"><%=product.productID%></div>
                                        </td>
                                        <td>
                                            <p class="cart-product text-left fix"><img src="img/product/2.jpg" alt="" />
                                            </p>
                                        </td>
                                        <td>
                                            <strong>
                                                <p class="cart-stock"><%=product.productName%></p>
                                            </strong>
                                        </td>
                                        <td>
                                            <strong>
                                                <p class="cart-stock"><%=product.ownerName%></p>
                                            </strong>
                                        </td>
                                        <td>
                                            <p class="cart-stock"><%=product.productDescribe%> giây</p>
                                        </td>
                                        <td><button class="cart-pro-remove" data-toggle="modal" data-target="#modalAddAuction"><i class="zmdi zmdi-plus"></i></button></td>
                                        <td><button class="cart-pro-remove" data-toggle="modal" data-target="#exampleModalCenter" onclick="setProductEdit_Input('<%= product.productID %>','<%= product.productName %>','<%= product.productDescribe %>','<%= product.id %>','<%= product.ownerName %>')"><i class="zmdi zmdi-edit"></i></button></td>
                                        <td><a onclick="setHrefDel('/deleteProduct?productID=<%= product.productID %>&owner=<%= product.ownerName %>&id=<%= product.id %>')"><button class="cd-popup-trigger cart-pro-remove"><i class="zmdi zmdi-close"></i></button></a></td>
                                    </tr> <% i++;%> <% }); %> </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
